@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>#</th>
            <th>Oda Numarası</th>
            <th>Başlık</th>
            <th>Fiyat</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.RoomNumber</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn btn-rounded btn-outline-danger">Sil</a></td>
                <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn btn-rounded btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/AdminRoom/AddRoom" class="btn btn-info">Yeni Oda</a>

