@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Şehir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td><a href="/Guest/DeleteGuest/@item.GuestID" class="btn btn-rounded btn-outline-danger">Sil</a></td>
                <td><a href="/Guest/UpdateGuest/@item.GuestID" class="btn btn-rounded btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Guest/AddGuest" class="btn btn-info">Yeni Müşteri</a>


