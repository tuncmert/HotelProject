@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Hizmet Başlığı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.ServiceID</th>
                <td>@item.Title</td>
                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-rounded btn-outline-danger">Sil</a></td>
                <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-rounded btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Service/AddService" class="btn btn-info">Yeni Hizmet Girişi</a>

